  <div class="row">
    <div class="col s12 m6">
      <div class="card yellow lighten-3">
        <div class="card-content">
          <span class="card-title">By: <%=post.user.full_name%></span>
          <p>@post.body</p>
        </div>
        <div class="card-action">
          <%= link_to "Edit", edit_post_path(post) %>
          <%= link_to "Edit", destroy_post_path(post) method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
